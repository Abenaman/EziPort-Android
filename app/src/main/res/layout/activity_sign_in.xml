<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="364dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Welcome To EziPort"
            android:paddingTop="20dp"
            android:textSize="35sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <Button
            android:id="@+id/signIn"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Sign In"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/signUp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textSize="20dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/SignInLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SingUpMainLabel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Sign In To EziPort"
            android:textSize="35dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/userNameLabel"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/SingUpMainLabel"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="User Name"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SingUpMainLabel" />

        <TextView
            android:id="@+id/passWordLabel"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/userNameLabel"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Password"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/password"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/userName"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_toStartOf="@+id/password"
            android:layout_toLeftOf="@+id/password"
            android:text="Cancel" />

        <Button
            android:id="@+id/signInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cancelButton"
            android:layout_alignBottom="@+id/cancelButton"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_toEndOf="@+id/passWordLabel"
            android:layout_toRightOf="@+id/passWordLabel"
            android:text="Sign In" />


    </RelativeLayout>


</LinearLayout>
