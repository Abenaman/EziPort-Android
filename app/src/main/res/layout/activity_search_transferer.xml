<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.eziport.com.myapplication.Search.Transferer.Activity.SearchTransferer">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="70dp"
        android:text="\tDestination Country\t\t\t\t\t\tIntended Date"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_dest"
            android:layout_width="180dp"
            android:layout_height="49dp"
            android:layout_marginTop="60dp" />

        <EditText
            android:id="@+id/date_dest"
            android:layout_width="180dp"
            android:layout_height="49dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="DD/MM/YYYY"
            android:inputType="date" />


    </LinearLayout>
    
    <Button
        android:id="@+id/search_transferer"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginTop="165dp"
        android:layout_gravity="center_horizontal"
        android:text="Search"/>

    <fragment
        android:id="@+id/fragment1"
        android:name="android.eziport.com.myapplication.Search.Transferer.Activity.SearchTransfererFragment"
        android:layout_width="match_parent"
        android:layout_marginTop="220dp"
        android:layout_height="match_parent"
        />


</android.support.design.widget.CoordinatorLayout>
